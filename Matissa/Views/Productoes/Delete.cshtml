@model matissa.Models.Producto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/producto.css" asp-append-version="true" />
<script src="~/js/producto.js" asp-append-version="true"></script>


<div class="container-fluid titulo-proveedor" id="ocultar">
    <div class="row">
        <div class="col">
            <h1>Eliminar producto</h1>
        </div>
    </div>
</div>

<div class="container texto-quicksand mt-3 mb-3">
    <dl class="row p-3">
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.NombreProducto)
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.Descripción)
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.Descripción)
        </dd>
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.FechaCaducidad)
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.FechaCaducidad)
        </dd>
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.PrecioVenta)
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.PrecioVenta)
        </dd>
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.SaldoInventario)
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.SaldoInventario)
        </dd>
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <div class="row justify-content-center botones align-items-center">
            <div class="col text-end">
                <a asp-action="Index" class="boton-cancelar rounded-pill">Cancelar</a>
            </div>
            <div class="col text-start">
                <input type="button" value="Eliminar" data-bs-toggle="modal" data-bs-target="#exampleModal" class="boton-aceptar rounded-pill" />
            </div>
        </div>
        <div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Aviso</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ¿Estas seguro de que quieres eliminar el producto?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="boton-cancelar rounded-pill" data-bs-dismiss="modal">Cancelar</button>
                        <input type="submit" value="Eliminar" class="boton-aceptar rounded-pill" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

